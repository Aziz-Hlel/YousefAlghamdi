ygp.ae { 
  # API routes
    handle / api/* {
    reverse_proxy server:5000/api/
  }
  
  # Frontend static files (from mounted volume)
  handle {
    root * /srv
    try_files {path} /index.html
    file_server
  }
  
  # Security headers and compression (same as before)
  header {
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    X-Content-Type-Options "nosniff"
    X-Frame-Options "DENY"
    Referrer-Policy "strict-origin-when-cross-origin"
  }
  
  encode gzip
  tls tigana137@gmail.com
}